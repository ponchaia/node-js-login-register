  <body>
    <div class="container">
      <header class="blog-header py-3">
        <div class="row flex-nowrap justify-content-between align-items-center">
          <div class="col-4 pt-1">
            <a class="link-secondary" href="/">Index</a>
          </div>
          <div class="col-4 text-center">
            <a class="blog-header-logo text-dark" href="/">Strava Demo</a>
          </div>
          <div class="col-4 d-flex justify-content-end align-items-center">
            <a class="link-secondary" href="#" aria-label="Search">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="mx-3" role="img" viewBox="0 0 24 24"><title>Search</title><circle cx="10.5" cy="10.5" r="7.5"/><path d="M21 21l-5.2-5.2"/></svg>
            </a>
            <% if (loggedIn) { %>
              <a class="btn btn-sm btn-danger" href="/logout">Logout</a>
            <% } %>
    
            <% if (!loggedIn) { %>
              <a class="btn btn-sm btn-outline-secondary mx-3" href="/login">Sign In</a>
              <a class="btn btn-sm btn-success" href="/register">Sign Up</a>
            <% } %>
          </div>
        </div>
      </header>  
      <div class="nav-scroller py-1 mb-2">
        <nav class="nav d-flex justify-content-between">
          <a class="p-2 link-secondary" href="/home">Home</a>
        </nav>
      </div>
    </div>
    <main class="container">
      <div class="p-4 p-md-5 mb-4 text-white rounded bg-dark">
        <div class="col-md-6 px-0">
          <h1 class="display-4 fst-italic">Strava User Profile</h1>          
          <% if (UserData && UserData['stravaUserId'] != 0 && strava && strava['athlete'] == null) { %>
            <a href="/sync/data?page=strava" class="btn btn-outline-secondary mt-2">Sync Data</a>
          <% } else if (strava && strava['athlete'] != null) { %>
            <h3>Strava User ID <%= strava.athlete.id %></h3>
            <p class="lead mb-0">First name: <%= strava.athlete.firstname %></p>
            <p class="lead mb-0">Last name: <%= strava.athlete.lastname %></p>
            <p class="lead mb-0">City: <%= strava.athlete.city %></p>
            <p class="lead mb-0">State: <%= strava.athlete.state %></p>
            <p class="lead mb-0">Country: <%= strava.athlete.country %></p>
            <% if (strava.athlete.sex == "M") { %>
            <p class="lead mb-0">Sex: Male</p>
            <% } else if (strava.athlete.sex == "F") { %>
            <p class="lead mb-0">Sex: Female</p>
            <% } else { %>
              <p class="lead mb-0">Sex: -</p>
            <% } %>
            <a href="/sync/data?page=strava" class="btn btn-outline-secondary mt-2">Sync Data</a>            
            <% } else { %>
            <a class="btn btn-success w-25" href="<%= refreshTokenUrl %>">Connect Strava</a>
          <% } %>
        </div>
      </div>
      <div class="p-4 p-md-5 mb-4 text-white rounded bg-dark">
        <div class="col-md-6 px-0">
          <h1 class="display-4 fst-italic">Athlete Activities</h1>
          <% if (strava && strava['athleteActivities'] != null) { %>
            <% for(let i=0; i < strava['athleteActivities'].length; i++) { %>
              <div class="col-12 mb-4 rounded border p-2">
                <p class="lead mb-0">Name: <%= strava.athleteActivities[i].name %></p>
                <p class="lead mb-0">Activity type: <%= strava.athleteActivities[i].type %></p>
                <p class="lead mb-0">Distance: <%= Math.round(strava.athleteActivities[i].distance / 1000 * 100) / 100 %> km</p>
                <p class="lead mb-0">Moving time: <%= Math.round(strava.athleteActivities[i].moving_time / 60 * 10) / 10 %></p>
                <p class="lead mb-0">Elevation Gain: <%= Math.round(strava.athleteActivities[i].total_elevation_gain) %> m</p>
                <p class="lead mb-0">Average speed: <%= Math.round(strava.athleteActivities[i].average_speed * 3.6 * 10) / 10 %> km/h</p>
                <p class="lead mb-0">Average heartrate: <%= strava.athleteActivities[i].average_heartrate %> bmp</p>
                <p class="lead mb-0">Max heartrate: <%= strava.athleteActivities[i].max_heartrate %> bmp</p>
                <p class="lead mb-0">Calories: ... Cal</p>                
                <p class="lead mb-0">Start date: <%= strava.athleteActivities[i].start_date %></p>                
                <p class="lead mb-0">End date: <%= strava.athleteActivities[i].start_date_local %></p>
              </div>              
            <% } %>
          <% } %>
        </div>
      </div>
      <div class="row mb-2">
        <div class="col-md-12">
          <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
            <div class="col p-4 d-flex flex-column position-static">
              
            </div>
          </div>
        </div>
      </div>
    </main>
    <footer class="blog-footer">
      <p>Blog template built for <a href="https://getbootstrap.com/">Bootstrap</a> by <a href="#">@...</a>.</p>
      <p>
        <a href="#">Back to top</a>
      </p>
    </footer>
  </body>
</html>
